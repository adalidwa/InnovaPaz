  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon apps/app-erp-backend/index.js",
    "start": "node apps/app-erp-backend/index.js",
    "docker:up": "docker start abh_mysql",
    "docker:down": "docker stop abh_mysql",
    "docker:logs": "docker logs abh_mysql",
    "db:linux:start": "./scripts/db-manage.sh start",
    "db:linux:stop": "./scripts/db-manage.sh stop",
    "db:linux:status": "./scripts/db-manage.sh status",
    "db:linux:backup": "./scripts/db-manage.sh backup",
    "db:linux:restore": "./scripts/db-manage.sh restore",
    "db:linux:connect": "./scripts/db-manage.sh connect",
    "db:linux:logs": "./scripts/db-manage.sh logs",
    "db:linux:restart": "./scripts/db-manage.sh restart",
    "db:linux:reset": "./scripts/db-manage.sh reset",
    "db:linux:help": "./scripts/db-manage.sh help",
    "db:win:start": ".\\scripts\\db-manage.bat start",
    "db:win:stop": ".\\scripts\\db-manage.bat stop",
    "db:win:status": ".\\scripts\\db-manage.bat status",
    "db:win:backup": ".\\scripts\\db-manage.bat backup",
    "db:win:restore": ".\\scripts\\db-manage.bat restore",
    "db:win:connect": ".\\scripts\\db-manage.bat connect",
    "db:win:logs": ".\\scripts\\db-manage.bat logs",
    "db:win:restart": ".\\scripts\\db-manage.bat restart",
    "db:win:reset": ".\\scripts\\db-manage.bat reset",
    "db:win:help": ".\\scripts\\db-manage.bat help",
    "setup:linux": "./scripts/db-manage.sh start && sleep 30 && npm run dev",
    "setup:win": ".\\scripts\\db-manage.bat start && timeout /t 30 /nobreak && npm run dev",
    "setup:full:linux": "./scripts/db-manage.sh start && sleep 30 && ./scripts/db-manage.sh backup && npm run dev",
    "setup:full:win": ".\\scripts\\db-manage.bat start && timeout /t 30 /nobreak && .\\scripts\\db-manage.bat backup && npm run dev",
    "test:api": "curl -s http://localhost:4000/api/test-db | jq .",
    "backup:auto:linux": "./scripts/db-manage.sh backup && echo \"Backup completado: $(date)\"",
    "backup:auto:win": ".\\scripts\\db-manage.bat backup && echo Backup completado: %date% %time%",
    "restore:latest:linux": "./scripts/db-manage.sh restore ../db/backups/latest_backup.sql",
    "restore:latest:win": ".\\scripts\\db-manage.bat restore .\\db\\backups\\latest_backup.sql"
  },
